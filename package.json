{
  "name": "testing-react-with-jest",
  "private": true,
  "version": "1.0.0",
  "description": "A demo app for an article I wrote on testing React with Jest",
  "main": "index.js",
  "scripts": {
    "watch": "webpack -w",
    "start": "live-server --port=8081",
    "test": "jest",
    "lint": "eslint --fix .",
    "format": "prettier --write './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc",
    "format1": "prettier './**/*.{js,jsx,ts,tsx,css,md,json}' --config ./.prettierrc"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "./setup-tests.js"
    ]
  },
  "author": "Jack Franklin",
  "license": "MIT",
  "dependencies": {
    "react": "^16.14.0",
    "react-dom": "^16.14.0",
    "shortid": "2.2.6"
  },
  "devDependencies": {
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "@babel/preset-react": "^7.12.1",
    "babel-jest": "^26.6.0",
    "babel-loader": "^8.1.0",
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.5",
    "eslint": "^7.17.0",
    "eslint-config-prettier": "^7.1.0",
    "eslint-plugin-jsx-a11y": "^6.4.1",
    "eslint-plugin-prettier": "^3.3.1",
    "eslint-plugin-react": "^7.22.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "jest": "^26.6.0",
    "live-server": "1.2.1",
    "prettier": "^2.2.1",
    "react-test-renderer": "15.3.2",
    "webpack": "^5.1.3",
    "webpack-cli": "^4.1.0"
  }
}
